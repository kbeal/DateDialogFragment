<?xml version="1.0" encoding="utf-8"?>
  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  	android:id="@+id/date_detail_layout"
  	android:layout_width="match_parent"
  	android:layout_height="wrap_content">
 	
  	<TextView
  		android:id="@+id/short_date_text"
  		android:layout_width="match_parent"
  		android:layout_height="wrap_content"
  		android:layout_alignParentLeft="true"
  		android:layout_marginTop="15dip"
  		android:gravity="center"
  		android:textStyle="italic"
  		android:text="1/1/11"/>
  	<TextView 	
  	    android:id="@+id/long_date_text"
  	    android:layout_width="match_parent"
  		android:layout_height="wrap_content"
  		android:layout_alignParentLeft="true"
  		android:layout_below="@id/short_date_text"
  		android:layout_marginTop="15dip"
  		android:gravity="center"
  		android:text="Jan 1st 2011"/>
  	<Button
  	    android:id="@+id/set_date_button"
  	    android:layout_height="wrap_content"
  	    android:layout_width="wrap_content"
  	    android:layout_below="@id/long_date_text" 
  	    android:layout_marginTop="20dip"
  	    android:layout_marginLeft="30dip" 	    
  	    android:text="Set Date"/>
</RelativeLayout>

